<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/itembg"
    android:id="@+id/item_layout"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/news_title"
        android:text="Title"
        android:layout_toRightOf="@id/imageView"
        android:textSize="15dp"
        android:textColor="#0064bb"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Dân Trí > Khoa học : 10/2/2016 6:30 PM"
        android:layout_height="wrap_content"
        android:id="@+id/news_time_site_category"
        android:layout_below="@+id/news_title"
        android:textSize="9dp"
        android:textColor="#916e89"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:text="summary\n update"
        android:layout_height="wrap_content"
        android:id="@+id/news_summary"
        android:textSize="11dp"
        android:layout_below="@id/news_time_site_category"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView" />

</RelativeLayout>