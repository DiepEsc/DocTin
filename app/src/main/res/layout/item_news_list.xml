<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/itembg"
    android:id="@+id/item_layout"
    android:clickable="true"
    android:longClickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/news_img_size"
        android:maxHeight="@dimen/news_img_size"
        android:layout_marginRight="@dimen/news_img_view_padding"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/news_title"
        android:text="Title"
        android:layout_toRightOf="@id/imageView"
        android:textSize="@dimen/news_title"
        android:textColor="@color/news_title"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="10/2/2016 6:30 PM"
        android:layout_height="wrap_content"
        android:id="@+id/news_time_site_category"
        android:layout_below="@+id/news_title"
        android:textSize="@dimen/news_pub_date"
        android:textColor="@color/news_pub_date"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:text="summary\n update"
        android:layout_height="wrap_content"
        android:id="@+id/news_summary"
        android:textSize="@dimen/news_summary"
        android:layout_below="@id/news_time_site_category"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView" />

</RelativeLayout>